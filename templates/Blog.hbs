<header>
  <h2 class="title">{{title}}</h2>

  <small>
    <span class="posted-date">
      <i class="fa fa-clock-o"></i>
      Posted <time datetime="{{date}}">{{moment date format="DD MMM, YYYY"}}</time>
    </span>

    <span class="author">
      <i class="fa fa-user"></i>
      {{author}}
    </span>

    <span class="categories">
      <i class="fa fa-folder"></i>
      Categories:
      {{#each categories}}
        <a href="/blog/category/{{this}}">{{this}}</a>
      {{/each}}
    </span>
  </small>
</header>

{{{content}}}

<ol class="comments"></ol>
