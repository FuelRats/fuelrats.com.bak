<header class="page-header">
  <h1>{{t 'pages.blog'}}</h1>
</header>

<small>
  <span class="posted-date">
    <i class="fa fa-clock-o"></i>
    Posted <time datetime="{{date}}">{{moment date format="DD MMM, YYYY"}}</time>
  </span>

  <span class="author">
    <i class="fa fa-user"></i>
  </span>

  <span>
    <i class="fa fa-folder"></i>
    Categories:
    <ul class="category-list"></ul>
  </span>
</small>

{{{content}}}

<ol class="comments loading"></ol>
